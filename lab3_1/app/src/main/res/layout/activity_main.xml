<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text0"
        android:background="@drawable/rectangle"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Text"
        android:gravity="center"
        android:textSize="23sp"
        android:layout_marginTop="150dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/green_block"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text0"
        android:layout_marginTop="100dp"
        android:background="@color/green" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:text="Text"
        android:textSize="23sp"
        android:layout_alignTop="@id/text0"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/pink_block"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/pink"
        android:layout_below="@id/green_block"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/text2"
        android:background="@drawable/rectangle"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Text"
        android:textSize="23sp"
        android:gravity="center"
        android:layout_alignTop="@id/green_block"
        android:layout_alignBottom="@id/green_block"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:text="Button"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:backgroundTint="@color/white"
        android:layout_alignTop="@id/green_block"
        android:layout_alignBottom="@id/green_block"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:text="Text"
        android:textSize="23sp"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/pink_block"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Text"
        android:textSize="23sp"
        android:gravity="center"
        android:background="@drawable/rectangle"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/pink_block"/>

</RelativeLayout>
